@model UserUpdateDto


@{
    Layout = "_Layout";
    ViewBag.Title = "Profil Düzenle";
}


<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="card mt-3">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-edit"></span> Profil Düzenle</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-area="Admin" asp-controller="User" asp-action="ChangeDetails" enctype="multipart/form-data" id="form-user-update">
                    <div  asp-validation-summary="All" class="text-danger" id="validation-summary"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input type="text" class="form-control" asp-for="UserName" placeholder="Lütfen Kullanıcı Adı Giriniz" />
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input placeholder="Lütfen Eposta Giriniz" type="email" class="form-control" asp-for="Email" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber"></label>
                        <input placeholder="Lütfen Telefon Numarası Giriniz" type="tel" class="form-control" asp-for="PhoneNumber" />
                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Picture"></label>
                        @*Mevcut Resmin İsminin Action a gitmesi için tanımladık*@
                        <input type="hidden" asp-for="Picture" />
                        <img class="my-image img-fluid img-thumbnail" src="~/img/@Model.Picture" alt="@Model.UserName" />
                        <span class="text-danger" asp-validation-for="Picture"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PictureFile"></label>
                        <input type="file" accept="image/*" class="form-control-file" asp-for="PictureFile" />
                        <span class="text-danger" asp-validation-for="PictureFile"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-block btn-primary"><span class="fas fa-save"></span> Kaydet</button>
                        <a asp-action="Index" asp-area="Admin" asp-controller="Home" class="btn btn-block btn-danger"><span class="fas fa-times"></span> İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>